@{
    Layout = null;
}

@model IEnumerable<CDN.Directory.Core.Entities.Member>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<div class="navbar-container">
    <a href="@Url.Action("Index")">Home</a>
    <a href="@Url.Action("Create")">Add Member</a>
    <a href="@Url.Action("Archived")">Archived Members</a>
</div>

<div class="container text-center">
    <h2>Archived Members</h2>

    <form asp-action="Archived" method="get" class="my-4">
        <input type="text" name="searchString" placeholder="Search by Username or Email..." class="form-control mb-2" />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>

    <p>
        <a asp-action="Index" class="btn btn-secondary">Back to Active Members</a>
    </p>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Username</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>
                        <form asp-action="Unarchive" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-success btn-sm">Unarchive</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
