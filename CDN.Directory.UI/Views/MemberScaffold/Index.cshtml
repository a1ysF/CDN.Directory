@{
    Layout = null;
}

@model IEnumerable<CDN.Directory.Core.Entities.Member>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>

<div class="navbar-container">
    <a href="@Url.Action("Index")">Home</a>
    <a href="@Url.Action("Create")">Add Member</a>
    <a href="@Url.Action("Archived")">Archived Members</a>
</div>

<div class="container text-center">
    <h2>Members</h2>

    <form asp-action="Index" method="get" class="my-4">
        <input type="text" name="searchString" placeholder="Search by Username or Email..." class="form-control mb-2" />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>

    <p>
        <a asp-action="Create" class="btn btn-success">Create New</a>
        <a asp-action="Archived" class="btn btn-secondary">View Archived Members</a>
    </p>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Skillsets</th>
                <th>Hobbies</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Where(x => !x.IsArchived))
            {
                <tr>
                    <td>@item.Username</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>@string.Join(", ", item.MemberSkillsets.Select(s => s.Skillset.Name))</td>
                    <td>@string.Join(", ", item.MemberHobbies.Select(h => h.Hobby.Name))</td>
                    <td>
                        <button type="button" class="btn btn-warning btn-sm mb-2" data-bs-toggle="modal" data-bs-target="#confirmArchiveModal-@item.Id">
                            Archive
                        </button>
                        <br />
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary mb-2">Edit</a>
                        <br />
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger mb-2">Delete</a>

                        <!-- Archive Confirmation Modal -->
                        <div class="modal fade" id="confirmArchiveModal-@item.Id" tabindex="-1" aria-labelledby="archiveModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content bg-dark text-white">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Confirm Archive</h5>
                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to archive <strong>@item.Username</strong>?
                                    </div>
                                    <div class="modal-footer">
                                        <form asp-action="Archive" method="post">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-warning">Confirm</button>
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
